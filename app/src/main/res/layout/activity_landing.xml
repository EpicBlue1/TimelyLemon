<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity"
    android:padding="20dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_icon"
        android:layout_gravity="left"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/light_pink"
        android:padding="11dp"
        app:strokeColor="@color/black"
        android:layout_marginTop="60dp"
        app:strokeWidth="5dp"
        app:contentPadding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Timely Lemon!"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The trivia app themed around all movie and music pop culture from the 70’s, 80’s, 90’s and 2000’s. Test your general knowledge!"
                    android:textSize="20dp"
                    android:textStyle=""
                    android:layout_marginTop="35dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Your Name"
        android:textSize="32dp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="5dp"
            app:boxStrokeColor="@color/black"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Your Name"
                android:id="@+id/et_username"
                />

        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:id="@+id/btn_start"
        android:layout_height="80dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/brigth_yellow"
        app:strokeColor="@color/black"
        android:layout_marginTop="120dp"
        app:strokeWidth="5dp"
        app:contentPadding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="32dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textAlignment="center"
            />

    </com.google.android.material.button.MaterialButton>

</LinearLayout>
