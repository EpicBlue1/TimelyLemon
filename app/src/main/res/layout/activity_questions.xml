<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity"
    android:background="@drawable/pp_back"
    android:padding="20dp"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/black"
            android:backgroundTintMode="screen"
            app:backgroundTint="@color/black"
            android:id="@+id/btn_back"
            app:strokeColor="@color/black" />

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/light_pink"
        app:strokeColor="@color/black"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:strokeWidth="5dp"
        app:contentPadding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="The trivia app themed around all movie and music pop culture from the 70’s, 80’s, 90’s and 2000’s. Test your general knowledge!"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="" />
    </com.google.android.material.card.MaterialCardView>

    //question containers
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ques_con"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="80's"
            android:id="@+id/answerOne"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textSize="26dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ques_con"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="80's"
            android:id="@+id/answerTwo"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textSize="26dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ques_con"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="80's"
            android:id="@+id/answerThree"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textSize="26dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="11dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/ques_con"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_black"
            android:text="80's"
            android:id="@+id/answerFour"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textSize="26dp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/bright_yellow"
        android:fontFamily="@font/roboto_black"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:shadowColor="@color/black"
        android:textStyle="bold"
        app:contentPadding="15dp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp">

    </com.google.android.material.button.MaterialButton>


</LinearLayout>
